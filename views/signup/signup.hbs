<body>
	
	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
				<div class="login100-pic js-tilt" data-tilt>
					<img src="/signup/images/img-01.png" alt="IMG">
				</div>

				<form class="login100-form validate-form" action="/signup/details" method="post" id="signupform">
					<span class="login100-form-title">
						Join With Us
					</span>

					<div class="exist-error">{{alreadyexist}}</div>

                    
					<div class="wrap-input100">
						<input class="input100" type="number" name="mobile" id="mobile" placeholder="Enter Mobile Number">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa-solid fa-phone"></i>
						</span>
					</div>
					<label for="mobile" class="form-error" id="mobile-error"></label>

					<div class="wrap-input100">
						<input class="input100" type="text" name="firstname" id="firstname" placeholder="First Name">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-user" aria-hidden="true"></i>
						</span>
					</div>
					<label for="firstname" id="firstname-error" class="form-error"></label>

	                <div class="wrap-input100">
						<input class="input100" type="text" name="lastname" id="lastname" placeholder="Last Name">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-user" aria-hidden="true"></i>
						</span>
					</div>
					<label for="lastname" id="lastname-error" class="form-error"></label>


					<div class="wrap-input100">
						<input class="input100" type="text" name="email" id="email" placeholder="Enter Your Email">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-envelope" aria-hidden="true"></i>
						</span>
					</div>
					<label for="email" class="form-error" id="email-error"></label>

					<div class="wrap-input100">
						<input class="input100" type="password" name="password" id="password" placeholder="Enter Your password">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-lock" aria-hidden="true"></i>
							<a style="pointer-events: all;margin-left: auto;margin-right: 22px;" toggle="#password-field" class="fa-regular fa-eye toggle-password" id="togglepassword">
							<i id="toggleicon" class=""></i>
							</a>
						</span>
					</div>
					<label for="password" class="form-error" id="password-error"></label>

					
					<div class="wrap-input100">
						<input class="input100" type="password" id="conformpassword" placeholder="Conform Password">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-lock" aria-hidden="true"></i>
						</span>
					</div>
                    <label for="connformpassword" class="form-error" id="conformpassword-error"></label>
					<input style="display: none;" type="text" name="button" value="true">
					<input style="display: none;" type="text" name="status"  value="false">

					<div class="container-login100-form-btn">
						<button class="login100-form-btn">
							<input type="submit" class="login100-form-btn" value="Signup">
						</button>
					</div>

					<div class="text-center p-t-136">
						<a class="txt2" href="/login">
							Existing User? Log in
							<i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
						</a>
					</div>
				</form>
			</div>
		</div>
	</div>
	
	

	
