               </div>
					</ul>
				</div>
			</div>
			<!-- /TOP HEADER -->

			<!-- MAIN HEADER -->
			<div id="header">
				<!-- container -->
				<div class="container">
					<!-- row -->
					<div class="row">
						<!-- LOGO -->
						<div class="col-md-3">
							<div class="header-logo">
								<a href="#" class="logo">
									<img src="./img/logo.png" alt="">
								</a>
							</div>
						</div>
						<!-- /LOGO -->

						<!-- SEARCH BAR -->
						<div class="col-md-6">
							<div class="header-search">
								<form>
									<select class="input-select">
										<option value="0">All Categories</option>
										<option value="1">Category 01</option>
										<option value="1">Category 02</option>
									</select>
									<input class="input" placeholder="Search here">
									<button class="search-btn">Search</button>
								</form>
							</div>
						</div>
						<!-- /SEARCH BAR -->

						<!-- ACCOUNT -->
						<div class="col-md-3 clearfix">
							<div class="header-ctn">
								<!-- Wishlist -->
								<div>
									<a href="/home/wishlist">
										<i class="fa fa-heart-o"></i>
										<span>Your Wishlist</span>
										<div class="qty">2</div>
									</a>
								</div>
								<!-- /Wishlist -->

								<!-- Cart -->
								<div class="dropdown">
									<a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
										<i class="fa fa-shopping-cart"></i>
										<span>Your Cart</span>
										<div class="qty" id="cartcount">{{cartCount}}</div>
									</a>
									<div class="cart-dropdown">
										<div class="cart-list">
											{{#each data}}
											<div class="product-widget">
												<p id=""></p>
												<div class="product-img">
													<img src="./images/productimages/{{this.items._id}}/1.jpg" alt="">
												</div>
												<div class="product-body">
													<h3 class="product-name"><a href="#">{{this.items.Name}}</a></h3>
													<h4 class="product-price"><span id="q" class="qty">{{this.quantity}}x</span>â‚¹{{this.items.Price}}.00</h4>
												</div>
												<button class="delete"><i class="fa fa-close"></i></button>
											</div>
											{{/each}}
										</div>
										<div class="cart-summary">
											<small>{{cartCount}} Item(s) selected</small>
											{{!-- <h5>SUBTOTAL: $2940.00</h5> --}}
										</div>
										<div class="cart-btns">
											<a href="/home/cart">View Cart</a>
											<a href="#">Checkout  <i class="fa fa-arrow-circle-right"></i></a>
										</div>
									</div>
								</div>
								<!-- /Cart -->

								<!-- Menu Toogle -->
								<div class="menu-toggle">
									<a href="#">
										<i class="fa fa-bars"></i>
										<span>Menu</span>
									</a>
								</div>
								<!-- /Menu Toogle -->
							</div>
						</div>
						<!-- /ACCOUNT -->
					</div>
					<!-- row -->
				</div>
				<!-- container -->
			</div>
			<!-- /MAIN HEADER -->
		</header>
		<!-- /HEADER -->