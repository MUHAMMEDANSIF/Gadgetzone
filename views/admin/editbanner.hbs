                    <h6 class="mb-4">Edit Banner</h6>
                    <form id="form" action="/Dashbord/edit-banner/{{banner._id}}" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name" class="form-label">Banner Name</label>
                            <input type="text" class="form-control" name="name" value="{{banner.name}}" required>
                        </div>
                        <div class="mb-3">
                            <label for="heading" class="form-label">Heading</label>
                            <input type="text" class="form-control" name="heading" value="{{banner.heading}}" required>
                        </div>
                        <div class="mb-3">
                            <label for="subheading" class="form-label">Sub Heading</label>
                            <input type="text" class="form-control" name="subheading" value="{{banner.subheading}}" required>
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Description</label>
                            <input type="text" class="form-control" name="description" value="{{banner.description}}" required>
                        </div>
                        <div class="mb-3">
                            <label for="formFile" class="form-label">Upload Banner Image</label>
                            <input class="form-control" type="file" name="images"  id="formFile">
                        </div>
                </div>

                <input type="submit" class="btn btn-primary mt-3" value="Edit Banner">
                </form>
